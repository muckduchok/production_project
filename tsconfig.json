{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./**/*.ts",
    "./**/*.tsx"
  ]
}